<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminProfileR">

    <Button
        android:id="@+id/button"
        android:layout_width="207dp"
        android:layout_height="72dp"
        android:layout_weight="1"
        android:text="Admin"
        android:textColor="@color/textColor"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/teacher_list_btn2"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/teacher_list_btn2"
        android:layout_width="212dp"
        android:layout_height="72dp"
        android:layout_weight="1"
        android:text="Teachers"
        android:textColor="@color/textColor"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="190dp"
        android:layout_height="33dp"
        android:layout_marginTop="96dp"
        android:text="ADMIN PROFILE"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="78dp"
        android:layout_height="32dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="476dp"
        android:text="EMAIL"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="271dp"
        android:layout_height="210dp"
        android:layout_marginTop="192dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/executive" />

    <TextView
        android:id="@+id/email"
        android:layout_width="243dp"
        android:layout_height="31dp"
        android:layout_marginTop="476dp"
        android:text="A@gmail.com"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.904"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/CreateAdminBtn"
        android:layout_width="171dp"
        android:layout_height="58dp"
        android:layout_marginTop="552dp"
        android:text="Create Admin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>